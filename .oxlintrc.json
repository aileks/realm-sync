{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript", "unicorn", "oxc", "react", "jsx-a11y", "vitest"],
  "categories": {
    "correctness": "warn",
    "suspicious": "warn"
  },
  "rules": {
    "no-debugger": "error",
    "typescript/no-explicit-any": "error",
    "react/exhaustive-deps": "warn",
    "react/rules-of-hooks": "error"
  },
  "settings": {
    "react": {
      "version": "19"
    }
  },
  "env": {
    "browser": true
  }
}

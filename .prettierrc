{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "experimentalTernaries": true,
  "proseWrap": "never",
  "useTabs": false,
  "printWidth": 100,
  "trailingComma": "es5",
  "bracketSpacing": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "bracketSameLine": false,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 80
      }
    },
    {
      "files": "*.json",
      "options": {
        "printWidth": 80
      }
    }
  ],
  "plugins": ["prettier-plugin-tailwindcss"]
}
